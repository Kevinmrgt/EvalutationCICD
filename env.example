# Configuration du serveur
PORT=3000
NODE_ENV=development

# Configuration des logs
LOG_LEVEL=info

# Configuration de l'API
API_VERSION=1.0.0
API_BASE_URL=http://localhost:3000

# Sécurité
JWT_SECRET=your-super-secret-jwt-key-here
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Base de données (pour future utilisation)
DATABASE_URL=mongodb://localhost:27017/evalutationcicd
DB_HOST=localhost
DB_PORT=27017
DB_NAME=evalutationcicd
DB_USER=
DB_PASSWORD=

# Configuration Docker
DOCKER_IMAGE_NAME=evalutationcicd
DOCKER_TAG=latest

# Configuration CI/CD
GITHUB_TOKEN=
DOCKERHUB_USERNAME=
DOCKERHUB_TOKEN=

# Monitoring
MONITORING_ENABLED=true
METRICS_PORT=9090

# Snapshots et backups
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d

# Notifications
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Terraform variables
TF_VAR_environment=development
TF_VAR_region=eu-west-1
TF_VAR_instance_type=t3.micro

# Ansible variables
ANSIBLE_HOST_KEY_CHECKING=False
ANSIBLE_VAULT_PASSWORD= 